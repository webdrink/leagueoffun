{
  "name": "@leagueoffun/monorepo",
  "version": "0.1.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @leagueoffun/gamepicker dev",
    "dev:gamepicker": "pnpm --filter @leagueoffun/gamepicker dev",
    "dev:blamegame": "pnpm --filter @leagueoffun/blamegame dev",
    "dev:hookhunt": "pnpm --filter @leagueoffun/hookhunt dev",
    "build": "pnpm --filter @leagueoffun/gamepicker build && pnpm --filter @leagueoffun/blamegame build && pnpm --filter @leagueoffun/hookhunt build",
    "build:gamepicker": "pnpm --filter @leagueoffun/gamepicker build",
    "build:blamegame": "pnpm --filter @leagueoffun/blamegame build",
    "build:hookhunt": "pnpm --filter @leagueoffun/hookhunt build",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "install:all": "pnpm install"
  }
}
